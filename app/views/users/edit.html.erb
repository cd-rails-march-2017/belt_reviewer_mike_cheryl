<h3>Edit Your Profile</h3>
<% if flash[:notice] %>
  <% flash[:notice].each do |notice| %>
    <p class="text-danger"><%= notice %></p>
  <% end %>
<% end %>

<%= form_tag("/events/#{@event.id}", method: "patch") do %>
  <div class="form-group">
    <%= label_tag(:first_name, "First Name:") %>
    <%= text_field_tag(:first_name, "#{@user.first_name}") %>
  </div>
  <div class="form-group">
    <%= label_tag(:last_name, "Last Name:") %>
    <%= text_field_tag(:last_name, "#{@user.last_name}") %>
  </div>
  <div class="form-group">
    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email, "#{@user.email}") %>
  </div>
  <div class="form-group">
    <%= label_tag "Location:" %>
    <%= text_field_tag(:city, "#{@user.city}") %>
    <%= select_tag(:state, options_for_select(us_states, @user.state)) %>
  </div>
  <%= submit_tag("Update Records") %>
<% end %>
